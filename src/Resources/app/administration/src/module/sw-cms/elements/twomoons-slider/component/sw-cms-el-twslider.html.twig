<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_cms_element_twslider %}
    <div
        class="sw-cms-el-twslider"
        :class="classes"
        :style="verticalAlignStyle"
    >
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_twslider_title %}
        <div
            v-if="element.config.title.value"
            class="sw-cms-el-twslider__title"
        >
            {{ element.config.title.value }}
        </div>
        {% endblock %}
    
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_twslider_content %}
        <div class="sw-cms-el-twslider__content">
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_cms_element_twslider_arrow_left %}
            <div
                v-if="hasNavigation"
                class="sw-cms-el-twslider__navigation"
            >
                <sw-icon
                    class="sw-cms-el-twslider__navigation-button"
                    name="regular-chevron-left"
                    size="24"
                />
            </div>
            {% endblock %}
    
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_cms_element_twslider_product_holder %}
            <div
                ref="productHolder"
                class="sw-cms-el-twslider__product-holder"
            >
                <template v-if="!element.data || !element.data.products">
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_cms_element_twslider_demo_data %}
                    <sw-cms-el-product-box
                        :element="demoProductElement"
                    />
                    {% endblock %}
                </template>
    
                <template v-else>
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_cms_element_twslider_products %}
                    <!-- eslint-disable vue/no-use-v-if-with-v-for -->
                    <sw-cms-el-product-box
                        v-for="(product, index) in element.data.products"
                        :key="product.id"
                        :element="getProductEl(product)"
                    />
                    {% endblock %}
                </template>
            </div>
            {% endblock %}
    
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_cms_element_twslider_arrow_right %}
            <div
                v-if="hasNavigation"
                class="sw-cms-el-twslider__navigation"
            >
                <sw-icon
                    class="sw-cms-el-twslider__navigation-button"
                    name="regular-chevron-right"
                    size="24"
                />
            </div>
            {% endblock %}
        </div>
        {% endblock %}
    </div>
    {% endblock %}